


@model PaginatedList<Setting>




@{
    int counter = (Model.ActivePage-1)*Model.ElementCount;
}

<div class="container pt-5 pb-5">

    <div class="container">
        <h1 style="text-align:center">Settings</h1>
    </div>

    <div>


        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>
                    <th scope="col">Action</th>
                   @* <th scope="col"><a class="btn btn-primary" asp-action="create" asp-controller="setting">Create</a></th>*@
                </tr>
            </thead>
            <tbody>


                @foreach(var setting in Model)
                {
                    counter++;

                    <tr>
                    <th scope="row">@counter</th>
                    <td>@setting.Id</td>
                    <td>@setting.Key</td>
                    <td>@setting.Value</td>
                    <td><a class="btn btn-success" asp-action="update" asp-controller="setting" asp-route-id="@setting.Id">Update</a></td>
                   @* <td><a class="btn btn-danger" asp-action="delete" asp-controller="setting" asp-route-id="@setting.Id">Delete</a></td>*@

                </tr>
                }

                
               
            </tbody>
        </table>

        
        <form method="get">




            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">


                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a class="page-link" asp-route-page="@(Model.HasPrevious ? (Model.ActivePage-1) : 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPageCount; i++)
                    {
                        <li class="page-item @(i==Model.ActivePage ? "active" : "")"><a class="page-link" asp-route-page="@i">@i</a></li>
                    }

                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                        <a class="page-link" asp-route-page="@(Model.HasNext ? (Model.ActivePage+1) : Model.TotalPageCount)">Next</a>
                    </li>


                   @* <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>*@


                </ul>
            </nav>


        </form>

    </div>



</div>
